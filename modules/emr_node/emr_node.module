<?php

/**
 * @file
 * Entity meta relation node module file.
 */

declare(strict_types = 1);

use Drupal\Core\Entity\ContentEntityInterface;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_node_form_alter().
 */
function emr_node_form_node_form_alter(&$form, FormStateInterface &$form_state) {
  $contentEntity = $form_state->getFormObject()->getEntity();
  $form = \Drupal::service('emr.form_manager')->addFormElements($form, $form_state, $contentEntity);
}

/**
 * Implements hook_node_update().
 */
function emr_node_node_update(ContentEntityInterface $entity) {
  // Copy previous relations when node is updated outside of the edit form.
  if ($entity->isNewRevision() && (!isset($entity->emr_no_copy) || !$entity->emr_no_copy)) {
    \Drupal::service('emr.manager')->copyEntityMetaRelations($entity, 'emr_node_revision');
  }

  // Update status for entity meta.
  \Drupal::service('emr.manager')->updateEntityMetaRelatedStatus($entity);
}
